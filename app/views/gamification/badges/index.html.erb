<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Gerenciar Medalhas</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @badges.each do |badge| %>
      <div class="bg-white shadow-md rounded-lg overflow-hidden flex flex-col">
        <div class="p-4 flex-grow">
          <div class="flex items-center mb-4">
            <% if badge.image_url.present? %>
              <%= image_tag badge.image_url, class: "w-12 h-12 rounded-full mr-4 object-cover bg-gray-200" %>
            <% else %>
              <div class="w-12 h-12 rounded-full mr-4 bg-gray-300 flex items-center justify-center text-gray-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path></svg>
              </div>
            <% end %>
            <div>
              <h2 class="text-xl font-semibold text-gray-800"><%= badge.name %></h2>
              <p class="text-xs text-gray-500 font-mono"><%= badge.key %></p>
            </div>
          </div>
          <p class="text-gray-600 text-sm mb-4"><%= badge.description %></p>
          
          <div class="bg-gray-50 p-3 rounded text-xs text-gray-700 font-mono">
            <strong>Crit√©rios:</strong> <%= badge.criteria %>
          </div>
        </div>
        <div class="bg-gray-100 px-4 py-3 border-t border-gray-200">
          <%= link_to "Editar", edit_gamification_badge_path(badge), class: "text-blue-600 hover:text-blue-800 font-medium text-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
