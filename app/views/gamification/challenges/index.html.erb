<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Missões e Desafios</h1>
    <%= link_to "Nova Missão", new_gamification_challenge_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full leading-normal">
      <thead>
        <tr>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Título</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Prêmio</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Período</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @challenges.each do |challenge| %>
          <tr>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <p class="text-gray-900 whitespace-no-wrap font-medium"><%= challenge.title %></p>
              <p class="text-gray-600 text-xs"><%= truncate(challenge.description, length: 50) %></p>
            </td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                <%= challenge.reward %>
              </span>
            </td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <p class="text-gray-900 whitespace-no-wrap">
                <%= challenge.starts_at.strftime("%d/%m/%Y") %> - <%= challenge.ends_at.strftime("%d/%m/%Y") %>
              </p>
            </td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <% if Time.current < challenge.starts_at %>
                <span class="relative inline-block px-3 py-1 font-semibold text-yellow-900 leading-tight">
                  <span aria-hidden class="absolute inset-0 bg-yellow-200 opacity-50 rounded-full"></span>
                  <span class="relative">Agendado</span>
                </span>
              <% elsif Time.current > challenge.ends_at %>
                <span class="relative inline-block px-3 py-1 font-semibold text-red-900 leading-tight">
                  <span aria-hidden class="absolute inset-0 bg-red-200 opacity-50 rounded-full"></span>
                  <span class="relative">Encerrado</span>
                </span>
              <% else %>
                <span class="relative inline-block px-3 py-1 font-semibold text-green-900 leading-tight">
                  <span aria-hidden class="absolute inset-0 bg-green-200 opacity-50 rounded-full"></span>
                  <span class="relative">Ativo</span>
                </span>
              <% end %>
            </td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <%= link_to "Editar", edit_gamification_challenge_path(challenge), class: "text-blue-600 hover:text-blue-900 mr-3" %>
              <%= link_to "Excluir", gamification_challenge_path(challenge), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
