<%= form_with(model: [:gamification, challenge], local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |f| %>
  <% if challenge.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <strong class="font-bold">Erros encontrados:</strong>
      <ul class="list-disc list-inside">
        <% challenge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :title, "Título", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, "Descrição", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_area :description, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= f.label :reward, "Prêmio", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :reward, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Ex: 500 XP, Badge Exclusivo, etc." %>
  </div>

  <div class="flex flex-wrap -mx-3 mb-4">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <%= f.label :starts_at, "Data de Início", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.datetime_field :starts_at, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <%= f.label :ends_at, "Data de Término", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.datetime_field :ends_at, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  </div>

  <div class="mb-6">
    <%= f.label :rules, "Regras (JSON)", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <p class="text-xs text-gray-600 mb-2">Exemplo: {"convite_accepted": 5, "visit_created": 2}</p>
    <%= f.text_area :rules, value: (challenge.rules.to_json if challenge.rules.present?), rows: 3, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline font-mono" %>
  </div>

  <div class="flex items-center justify-between">
    <%= f.submit "Salvar Missão", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
    <%= link_to "Cancelar", gamification_challenges_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
  </div>
<% end %>
