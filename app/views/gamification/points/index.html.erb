<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Ranking e Pontuação</h1>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full leading-normal">
      <thead>
        <tr>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Posição</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Apoiador</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Nível</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Pontos Totais</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @points.each_with_index do |point, index| %>
          <tr>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <span class="font-bold text-gray-700">#<%= index + 1 + ((@points.current_page - 1) * @points.limit_value rescue 0) %></span>
            </td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <div class="flex items-center">
                <div class="ml-3">
                  <p class="text-gray-900 whitespace-no-wrap font-semibold"><%= point.apoiador.name %></p>
                  <p class="text-gray-600 text-xs"><%= point.apoiador.whatsapp %></p>
                </div>
              </div>
            </td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                Lvl <%= point.level %>
              </span>
            </td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <span class="font-mono font-bold"><%= point.points %> XP</span>
            </td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <button onclick="document.getElementById('adjust-modal-<%= point.apoiador.id %>').classList.remove('hidden')" class="text-indigo-600 hover:text-indigo-900 text-xs font-semibold">
                Ajustar Pontos
              </button>

              <!-- Modal de Ajuste -->
              <div id="adjust-modal-<%= point.apoiador.id %>" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
                <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                  <div class="mt-3 text-center">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Ajustar Pontos: <%= point.apoiador.name %></h3>
                    <%= form_with(url: adjust_gamification_points_path, method: :post, local: true, class: "mt-2 px-7 py-3") do |f| %>
                      <%= hidden_field_tag :apoiador_id, point.apoiador.id %>
                      
                      <div class="mb-4 text-left">
                        <%= f.label :points, "Pontos a adicionar (pode ser negativo)", class: "block text-gray-700 text-sm font-bold mb-2" %>
                        <%= f.number_field :points, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                      </div>

                      <div class="mb-4 text-left">
                        <%= f.label :reason, "Motivo", class: "block text-gray-700 text-sm font-bold mb-2" %>
                        <%= f.text_field :reason, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                      </div>

                      <div class="items-center px-4 py-3">
                        <%= f.submit "Confirmar Ajuste", class: "px-4 py-2 bg-blue-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-300 cursor-pointer" %>
                      </div>
                      <div class="items-center px-4 py-3">
                        <button type="button" onclick="document.getElementById('adjust-modal-<%= point.apoiador.id %>').classList.add('hidden')" class="px-4 py-2 bg-gray-300 text-gray-700 text-base font-medium rounded-md w-full shadow-sm hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-300">
                          Cancelar
                        </button>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <div class="px-5 py-5 bg-white border-t flex flex-col xs:flex-row items-center xs:justify-between">
      <!-- Paginação (se usar kaminari ou will_paginate) -->
      <%# paginate @points %>
    </div>
  </div>
</div>
