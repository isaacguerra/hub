<% content_for :title, @evento.titulo %>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3 text-primary-custom mb-0"><i class="bi bi-calendar-event me-2"></i>Detalhes do Evento</h1>
      <div>
        <%= link_to edit_evento_path(@evento), class: "btn btn-outline-primary btn-sm me-2" do %>
          <i class="bi bi-pencil me-1"></i> Editar
        <% end %>
        <%= link_to eventos_path, class: "btn btn-outline-secondary btn-sm" do %>
          <i class="bi bi-arrow-left me-1"></i> Voltar
        <% end %>
      </div>
    </div>

    <div class="card card-custom mb-4">
      <div class="card-body">
        <h2 class="h4 fw-bold mb-3"><%= @evento.titulo %></h2>
        
        <div class="d-flex align-items-center text-muted mb-4">
          <div class="me-4">
            <i class="bi bi-calendar3 me-2"></i>
            <%= @evento.data.strftime("%d/%m/%Y às %H:%M") if @evento.data %>
          </div>
          <div>
            <i class="bi bi-geo-alt me-2"></i>
            <%= @evento.local %>
          </div>
        </div>

        <h5 class="text-primary-custom border-bottom pb-2 mb-3">Descrição</h5>
        <p class="text-secondary mb-4"><%= @evento.descricao %></p>

        <h5 class="text-primary-custom border-bottom pb-2 mb-3">Responsável</h5>
        <div class="d-flex align-items-center">
          <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3 border" style="width: 48px; height: 48px;">
            <i class="bi bi-person-fill text-secondary fs-4"></i>
          </div>
          <div>
            <div class="fw-bold"><%= @evento.coordenador&.nome || "Não informado" %></div>
            <div class="text-muted small">Coordenador</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
