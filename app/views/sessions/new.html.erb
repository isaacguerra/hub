<%= form_with url: sessions_path, local: true, class: "d-grid gap-3" do |f| %>
  <div>
    <%= f.label :whatsapp, "WhatsApp", class: "form-label fw-bold text-secondary" %>
    <div class="input-group">
      <span class="input-group-text bg-light"><i class="bi bi-whatsapp"></i></span>
      <%= f.text_field :whatsapp, 
          placeholder: "(96) 99999-9999", 
          class: "form-control",
          required: true,
          autofocus: true %>
    </div>
    <div class="form-text">Informe seu número cadastrado para receber o código de acesso.</div>
  </div>

  <div>
    <%= f.submit "Enviar Código", class: "btn btn-primary-custom w-100" %>
  </div>
<% end %>
