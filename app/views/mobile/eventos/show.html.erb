<div class="d-flex align-items-center mb-4">
  <%= link_to mobile_eventos_path, class: "btn btn-link text-dark p-0 me-3" do %>
    <i class="bi bi-arrow-left fs-4"></i>
  <% end %>
  <h5 class="fw-bold mb-0">Detalhes do Evento</h5>
</div>

<!-- Detalhes do Evento -->
<div class="mobile-card mb-3">
  <div class="card-body">
    <h5 class="fw-bold mb-3"><%= @evento.titulo %></h5>
    
    <div class="d-flex align-items-center mb-2 text-muted">
      <i class="bi bi-calendar-event me-2"></i>
      <span><%= @evento.data.strftime("%d/%m/%Y") %></span>
      <span class="mx-2">•</span>
      <i class="bi bi-clock me-2"></i>
      <span><%= @evento.data.strftime("%H:%M") %></span>
    </div>

    <div class="d-flex align-items-center mb-3 text-muted">
      <i class="bi bi-geo-alt me-2"></i>
      <span><%= @evento.local || "Local não informado" %></span>
    </div>

    <div class="d-flex align-items-center mb-3 text-muted">
      <i class="bi bi-people me-2"></i>
      <span class="small"><%= descricao_publico_alvo(@evento) %></span>
    </div>

    <% if @evento.descricao.present? %>
      <div class="bg-light p-3 rounded-3 mb-3">
        <p class="mb-0 small text-muted"><%= @evento.descricao %></p>
      </div>
    <% end %>

    <div class="d-flex align-items-center pt-2 border-top">
      <div class="avatar-circle bg-secondary text-white me-2" style="width: 30px; height: 30px; font-size: 0.8rem;">
        <% if @evento.coordenador.foto_perfil_url.present? %>
          <img src="<%= @evento.coordenador.foto_perfil_url %>" alt="<%= @evento.coordenador.nome %>" class="w-100 h-100 rounded-circle" style="object-fit: cover;">
        <% else %>
          <%= @evento.coordenador.nome.first.upcase %>
        <% end %>
      </div>
      <div>
        <small class="text-muted d-block" style="font-size: 0.7rem;">Organizado por</small>
        <span class="fw-bold small"><%= @evento.coordenador.nome %></span>
      </div>
    </div>
  </div>
</div>

<!-- Lista de Participantes -->
<div class="d-flex justify-content-between align-items-center mb-3 mt-4">
  <h6 class="fw-bold mb-0">Participantes Confirmados</h6>
  <span class="badge bg-primary rounded-pill"><%= @participantes.count %></span>
</div>

<% if @participantes.any? %>
  <% @participantes.each do |participante| %>
    <%= link_to mobile_apoiador_path(participante), class: "text-decoration-none text-dark" do %>
      <div class="mobile-card mb-2">
        <div class="card-body py-3">
          <div class="d-flex align-items-center">
            <div class="avatar-circle bg-primary text-white me-3" style="width: 45px; height: 45px; font-size: 1.1rem;">
              <% if participante.foto_perfil_url.present? %>
                <img src="<%= participante.foto_perfil_url %>" alt="<%= participante.nome %>" class="w-100 h-100 rounded-circle" style="object-fit: cover;">
              <% else %>
                <%= participante.nome.first.upcase %>
              <% end %>
            </div>
            <div class="flex-grow-1">
              <h6 class="fw-bold mb-0"><%= participante.nome %></h6>
              <div class="small text-muted">
                <i class="bi bi-geo-alt me-1" style="font-size: 0.7rem;"></i>
                <%= participante.municipio.nome %> - <%= participante.bairro.nome %>
              </div>
            </div>
            <i class="bi bi-chevron-right text-muted small"></i>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div class="text-center py-5 text-muted">
    <i class="bi bi-people fs-1 mb-3 d-block opacity-50"></i>
    <p>Nenhum participante confirmado ainda.</p>
  </div>
<% end %>

<!-- Ações do Evento (se for o organizador) -->
<% if Current.apoiador.e_autorizado?(:gerenciar_evento, @evento) %>
  <div class="d-grid gap-2 mt-4 mb-4">
    <%= link_to edit_mobile_evento_path(@evento), class: "btn btn-outline-primary" do %>
      <i class="bi bi-pencil me-2"></i>Editar Evento
    <% end %>
  </div>
<% end %>
