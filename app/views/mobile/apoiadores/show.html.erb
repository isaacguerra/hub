<style>
  :root {
    --primary-gradient: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #d946ef 100%);
    --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }

  .profile-header {
    background: var(--primary-gradient) !important;
    padding-top: 20px;
    padding-bottom: 80px;
    border-radius: 0 0 40px 40px;
    position: relative;
    color: white;
    text-align: center;
    margin-bottom: 60px;
    box-shadow: 0 10px 30px -10px rgba(99, 102, 241, 0.6);
    overflow: visible !important;
  }

  .profile-avatar-wrapper {
    position: absolute;
    bottom: -50px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
  }

  .profile-avatar {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    border: 5px solid white;
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    object-fit: cover;
    background: white;
  }

  .level-badge {
    position: absolute;
    bottom: 5px;
    right: 0;
    background: linear-gradient(45deg, #fbbf24, #f59e0b);
    color: white;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    border: 3px solid white;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }

  .stat-card {
    background: white;
    border-radius: 20px;
    padding: 15px;
    text-align: center;
    box-shadow: var(--card-shadow);
    transition: transform 0.2s;
    border: none;
    height: 100%;
  }

  .stat-card:active {
    transform: scale(0.95);
  }

  .section-title {
    font-weight: 800;
    color: #374151;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1.1rem;
  }

  .section-title i {
    color: #8b5cf6;
  }

  .activity-card {
    background: white;
    border-radius: 16px;
    padding: 15px;
    margin-bottom: 10px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    border: 1px solid #f3f4f6;
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .icon-box {
    width: 45px;
    height: 45px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .bg-soft-primary { background: #e0e7ff; color: #4f46e5; }
  .bg-soft-success { background: #dcfce7; color: #16a34a; }
  .bg-soft-warning { background: #fef3c7; color: #d97706; }
  .bg-soft-danger { background: #fee2e2; color: #dc2626; }
  .bg-soft-info { background: #cffafe; color: #0891b2; }

  .nav-btn-back {
    background: rgba(255,255,255,0.2);
    backdrop-filter: blur(5px);
    border-radius: 12px;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
  }
</style>

<!-- Header -->
<div class="profile-header">
  <div class="container d-flex justify-content-between align-items-center mb-3">
    <%= link_to mobile_apoiadores_path, class: "nav-btn-back" do %>
      <i class="bi bi-arrow-left fs-5"></i>
    <% end %>
    
    <% if Current.apoiador.e_autorizado?(:admin) %>
      <div class="dropdown">
        <button class="nav-btn-back border-0" type="button" data-bs-toggle="dropdown">
          <i class="bi bi-three-dots-vertical"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-4 p-2">
          <li><%= link_to "Editar Dados", edit_mobile_apoiador_path(@apoiador), class: "dropdown-item rounded-3" %></li>
          <li><button type="button" class="dropdown-item rounded-3" data-bs-toggle="modal" data-bs-target="#changeRoleModal">Alterar Função</button></li>
        </ul>
      </div>
    <% else %>
      <div style="width: 40px;"></div> <!-- Spacer -->
    <% end %>
  </div>

  <h4 class="fw-bold mb-1 text-shadow"><%= @apoiador.nome %></h4>
  <span class="badge bg-white bg-opacity-25 rounded-pill px-3 py-2 backdrop-blur">
    <%= @apoiador.funcao.nome %>
  </span>
  <div class="mt-2 small opacity-75">
    <i class="bi bi-geo-alt-fill"></i> <%= @apoiador.municipio.nome %>
  </div>

  <div class="profile-avatar-wrapper">
    <% avatar_url = Utils::BuscaImagemWhatsapp.buscar(@apoiador.whatsapp) %>
    <% if avatar_url.present? %>
      <%= image_tag avatar_url, class: "profile-avatar" %>
    <% else %>
      <div class="profile-avatar d-flex align-items-center justify-content-center fs-1 fw-bold text-primary">
        <%= @apoiador.nome.first.upcase %>
      </div>
    <% end %>
    <div class="level-badge">
      <%= @gamification.level %>
    </div>
  </div>
</div>

<div class="container pb-5">
  
  <!-- XP Progress -->
  <div class="text-center mb-4">
    <h2 class="fw-bold text-primary mb-0"><%= number_with_delimiter(@xp_current) %> <small class="fs-6 text-muted">XP</small></h2>
    <div class="progress" style="height: 8px; border-radius: 10px; background-color: #e5e7eb;">
      <div class="progress-bar" role="progressbar" style="width: <%= @progress_percent %>%; background: var(--primary-gradient);" aria-valuenow="<%= @progress_percent %>" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <small class="text-muted mt-1 d-block">Faltam <%= number_with_delimiter(@xp_next - @xp_current) %> XP para o nível <%= @gamification.level + 1 %></small>
  </div>

  <!-- Stats Grid -->
  <div class="row g-3 mb-4">
    <div class="col-4">
      <div class="stat-card">
        <div class="text-primary fw-bold fs-4 mb-1"><%= @convites_count %></div>
        <small class="text-muted lh-1 d-block">Convites</small>
      </div>
    </div>
    <div class="col-4">
      <div class="stat-card">
        <div class="text-success fw-bold fs-4 mb-1"><%= @apoiador.total_subordinados_diretos %></div>
        <small class="text-muted lh-1 d-block">Liderados</small>
      </div>
    </div>
    <div class="col-4">
      <div class="stat-card">
        <div class="text-warning fw-bold fs-4 mb-1"><%= @badges.count %></div>
        <small class="text-muted lh-1 d-block">Conquistas</small>
      </div>
    </div>
  </div>

  <!-- Dados Pessoais (Card) -->
  <div class="card border-0 shadow-sm rounded-4 mb-4">
    <div class="card-body">
      <h6 class="fw-bold mb-3 text-primary"><i class="bi bi-person-lines-fill me-2"></i>Dados Pessoais</h6>
      
      <div class="row g-3">
        <div class="col-12">
          <small class="text-muted d-block">WhatsApp</small>
          <div class="d-flex align-items-center gap-2">
            <span class="fw-medium"><%= @apoiador.whatsapp %></span>
            <a href="https://wa.me/55<%= @apoiador.whatsapp.gsub(/\D/, '') %>" target="_blank" class="btn btn-sm btn-success rounded-circle" style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
              <i class="bi bi-whatsapp"></i>
            </a>
          </div>
        </div>
        
        <div class="col-12">
          <small class="text-muted d-block">E-mail</small>
          <span class="fw-medium"><%= @apoiador.email.presence || "Não informado" %></span>
        </div>

        <div class="col-12">
          <small class="text-muted d-block">Localização Completa</small>
          <span class="fw-medium">
            <%= @apoiador.municipio.nome %> • <%= @apoiador.regiao.nome %> • <%= @apoiador.bairro.nome %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Eventos -->
  <div class="mb-4">
    <h5 class="section-title mb-3"><i class="bi bi-calendar-event-fill"></i> Eventos Recentes</h5>
    <% if @eventos_recentes.any? %>
      <% @eventos_recentes.each do |evento| %>
        <div class="activity-card">
          <div class="icon-box bg-soft-danger">
            <i class="bi bi-calendar-check"></i>
          </div>
          <div class="flex-grow-1">
            <h6 class="fw-bold mb-0 text-truncate"><%= evento.nome %></h6>
            <small class="text-muted"><%= l evento.data_hora, format: :short %></small>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center p-4 bg-light rounded-4 text-muted">
        <small>Nenhum evento recente.</small>
      </div>
    <% end %>
  </div>

  <!-- Minha Rede -->
  <h5 class="section-title mt-5 mb-3"><i class="bi bi-diagram-3-fill"></i> Rede de Apoio</h5>
  
  <div class="accordion shadow-sm rounded-4 overflow-hidden border-0" id="redeAccordion">
    <!-- Coordenadores -->
    <% if @rede[:coordenadores].present? %>
      <div class="accordion-item border-0">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed fw-bold bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCoord">
            Coordenadores (<%= @rede[:coordenadores].count %>)
          </button>
        </h2>
        <div id="collapseCoord" class="accordion-collapse collapse" data-bs-parent="#redeAccordion">
          <div class="accordion-body p-0">
            <div class="list-group list-group-flush">
              <% @rede[:coordenadores].each do |coord| %>
                <%= render "mobile/perfil/rede_item", pessoa: coord %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Líder -->
    <% if @rede[:lider].present? %>
      <div class="accordion-item border-0">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed fw-bold bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapseLider">
            Líder Direto
          </button>
        </h2>
        <div id="collapseLider" class="accordion-collapse collapse show" data-bs-parent="#redeAccordion">
          <div class="accordion-body p-0">
            <div class="list-group list-group-flush">
              <%= render "mobile/perfil/rede_item", pessoa: @rede[:lider] %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Liderados -->
    <div class="accordion-item border-0">
      <h2 class="accordion-header">
        <button class="accordion-button fw-bold bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapseLiderados">
          Liderados (<%= @rede[:liderados].count %>)
        </button>
      </h2>
      <div id="collapseLiderados" class="accordion-collapse collapse show" data-bs-parent="#redeAccordion">
        <div class="accordion-body p-0">
          <% if @rede[:liderados].present? %>
            <div class="list-group list-group-flush">
              <% @rede[:liderados].take(5).each do |liderado| %>
                <%= render "mobile/perfil/rede_item", pessoa: liderado %>
              <% end %>
            </div>
          <% else %>
            <div class="text-center p-4 text-muted">
              <small>Este apoiador ainda não tem liderados.</small>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>

<% if Current.apoiador.e_autorizado?(:admin) %>
  <!-- Modal Alterar Função -->
  <div class="modal fade" id="changeRoleModal" tabindex="-1" aria-labelledby="changeRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content rounded-4 border-0 shadow">
        <div class="modal-header border-0 pb-0">
          <h5 class="modal-title fw-bold" id="changeRoleModalLabel">Alterar Função</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= form_with(model: [:mobile, @apoiador], local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :funcao_id, "Nova Função", class: "form-label fw-bold" %>
              <%= f.collection_select :funcao_id, Funcao.order(:name), :id, :name, {}, { class: "form-select form-select-lg rounded-3" } %>
            </div>
            <div class="d-grid">
              <%= f.submit "Salvar Alteração", class: "btn btn-primary btn-lg rounded-pill", style: "background: var(--primary-gradient); border: none;" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
