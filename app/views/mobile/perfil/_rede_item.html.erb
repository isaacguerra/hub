<div class="list-group-item border-0 d-flex align-items-center p-3">
  <% avatar_url = Utils::BuscaImagemWhatsapp.buscar(pessoa.whatsapp) %>
  <% if avatar_url.present? %>
    <%= image_tag avatar_url, class: "rounded-circle me-3", style: "width: 40px; height: 40px; object-fit: cover;" %>
  <% else %>
    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3 text-muted" style="width: 40px; height: 40px;">
      <i class="bi bi-person-fill"></i>
    </div>
  <% end %>
  <div class="flex-grow-1">
    <h6 class="mb-0 fw-bold text-dark"><%= pessoa.nome %></h6>
    <small class="text-muted"><%= pessoa.funcao.nome %></small>
  </div>
  <% if pessoa.respond_to?(:whatsapp) && pessoa.whatsapp.present? %>
    <a href="https://wa.me/<%= pessoa.whatsapp %>" target="_blank" class="btn btn-sm btn-success rounded-circle shadow-sm" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
      <i class="bi bi-whatsapp" style="font-size: 0.9rem;"></i>
    </a>
  <% end %>
</div>
