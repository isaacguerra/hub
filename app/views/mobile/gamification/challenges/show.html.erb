<div class="container-fluid p-0 bg-light min-vh-100">
  <div class="bg-white p-3 shadow-sm mb-3 d-flex align-items-center sticky-top">
    <%= link_to mobile_gamification_challenges_path, class: "text-decoration-none text-dark me-3" do %>
      <i class="bi bi-arrow-left fs-4"></i>
    <% end %>
    <h5 class="mb-0 fw-bold">Detalhes da Missão</h5>
    <div class="ms-auto">
      <%= link_to edit_mobile_gamification_challenge_path(@challenge), class: "text-primary" do %>
        <i class="bi bi-pencil-square fs-4"></i>
      <% end %>
    </div>
  </div>

  <div class="px-3 pb-5">
    <div class="card border-0 shadow-sm rounded-4 mb-3">
      <div class="card-body p-4">
        <div class="d-flex align-items-center mb-3">
          <div class="icon-box warning me-3" style="width: 50px; height: 50px; font-size: 1.5rem;">
            <i class="bi bi-trophy-fill"></i>
          </div>
          <div>
            <h5 class="fw-bold mb-1"><%= @challenge.title %></h5>
            <span class="badge bg-warning text-dark rounded-pill">
              <%= @challenge.reward %> XP
            </span>
          </div>
        </div>

        <div class="mb-4">
          <h6 class="fw-bold text-muted small text-uppercase mb-2">Descrição</h6>
          <p class="text-muted mb-0"><%= @challenge.description %></p>
        </div>

        <div class="row g-3 mb-4">
          <div class="col-6">
            <div class="p-3 bg-light rounded-3 h-100">
              <small class="d-block text-muted mb-1">Início</small>
              <span class="fw-bold text-dark">
                <%= @challenge.starts_at&.strftime("%d/%m/%Y") || "N/A" %>
              </span>
            </div>
          </div>
          <div class="col-6">
            <div class="p-3 bg-light rounded-3 h-100">
              <small class="d-block text-muted mb-1">Fim</small>
              <span class="fw-bold text-dark">
                <%= @challenge.ends_at&.strftime("%d/%m/%Y") || "N/A" %>
              </span>
            </div>
          </div>
        </div>

        <% if @challenge.rules.present? %>
          <div class="mb-4">
            <h6 class="fw-bold text-muted small text-uppercase mb-3">Regras e Pontuação</h6>
            <div class="list-group list-group-flush border rounded-3">
              <% @challenge.rules.each do |action, count| %>
                <div class="list-group-item d-flex justify-content-between align-items-center bg-transparent">
                  <span class="text-dark">
                    <%= t("gamification.actions.#{action}", default: action.humanize) %>
                  </span>
                  <span class="badge bg-primary rounded-pill">
                    <%= count %>x
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="d-grid gap-2">
      <%= button_to mobile_gamification_challenge_path(@challenge), method: :delete, class: "btn btn-outline-danger rounded-pill py-3", form: { data: { turbo_confirm: "Tem certeza que deseja excluir esta missão?" } } do %>
        <i class="bi bi-trash me-2"></i> Excluir Missão
      <% end %>
    </div>
  </div>
</div>
