<div class="container-fluid p-0 bg-light min-vh-100">
  <!-- Header -->
  <div class="bg-white p-3 shadow-sm mb-3 d-flex align-items-center justify-content-between sticky-top">
    <div class="d-flex align-items-center">
      <%= link_to mobile_gamification_index_path, class: "text-decoration-none text-dark me-3" do %>
        <i class="bi bi-arrow-left fs-4"></i>
      <% end %>
      <h5 class="mb-0 fw-bold">Gerenciar Missões</h5>
    </div>
    <%= link_to new_mobile_gamification_challenge_path, class: "btn btn-primary btn-sm rounded-pill px-3 fw-bold" do %>
      <i class="bi bi-plus-lg me-1"></i> Nova
    <% end %>
  </div>

  <div class="px-3 pb-5">
    <% if @challenges.any? %>
      <% @challenges.each do |challenge| %>
        <div class="card border-0 shadow-sm rounded-4 mb-3 overflow-hidden">
          <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <div>
                <%= link_to mobile_gamification_challenge_path(challenge), class: "text-decoration-none text-dark stretched-link" do %>
                  <h6 class="fw-bold text-dark mb-1"><%= challenge.title %></h6>
                <% end %>
                <span class="badge bg-primary-subtle text-primary rounded-pill">
                  <%= challenge.reward %> XP
                </span>
              </div>
              <div class="dropdown" style="z-index: 2; position: relative;">
                <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                  <i class="bi bi-three-dots-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                  <li>
                    <%= link_to edit_mobile_gamification_challenge_path(challenge), class: "dropdown-item" do %>
                      <i class="bi bi-pencil me-2"></i> Editar
                    <% end %>
                  </li>
                  <li>
                    <%= button_to mobile_gamification_challenge_path(challenge), method: :delete, class: "dropdown-item text-danger", form: { data: { turbo_confirm: "Tem certeza?" } } do %>
                      <i class="bi bi-trash me-2"></i> Excluir
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>

            <p class="text-muted small mb-3 text-truncate-2">
              <%= challenge.description %>
            </p>

            <div class="d-flex align-items-center justify-content-between bg-light rounded-3 p-2">
              <div class="d-flex align-items-center text-muted small">
                <i class="bi bi-calendar-event me-1"></i>
                <%= challenge.starts_at.strftime("%d/%m") %> - <%= challenge.ends_at.strftime("%d/%m") %>
              </div>
              
              <% if Time.current.between?(challenge.starts_at, challenge.ends_at) %>
                <span class="badge bg-success rounded-pill">Ativa</span>
              <% elsif Time.current < challenge.starts_at %>
                <span class="badge bg-warning text-dark rounded-pill">Agendada</span>
              <% else %>
                <span class="badge bg-secondary rounded-pill">Encerrada</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-5 text-muted">
        <i class="bi bi-trophy fs-1 mb-3 d-block opacity-50"></i>
        <p>Nenhuma missão criada ainda.</p>
      </div>
    <% end %>
  </div>
</div>
