<div class="d-flex align-items-center mb-4">
  <%= link_to mobile_convites_path, class: "text-decoration-none text-muted me-3" do %>
    <i class="bi bi-arrow-left fs-4"></i>
  <% end %>
  <h5 class="fw-bold mb-0">Editar Convite</h5>
</div>

<div class="mobile-card">
  <div class="card-body">
    <%= form_with(model: [:mobile, @convite], local: true) do |f| %>
      <% if @convite.errors.any? %>
        <div class="alert alert-danger rounded-3 border-0 mb-3">
          <ul class="mb-0 ps-3">
            <% @convite.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :nome, "Nome do Convidado", class: "form-label fw-bold text-muted small" %>
        <%= f.text_field :nome, class: "form-control form-control-lg rounded-3 bg-light border-0" %>
      </div>

      <div class="mb-4">
        <%= f.label :whatsapp, "WhatsApp", class: "form-label fw-bold text-muted small" %>
        <%= f.telephone_field :whatsapp, class: "form-control form-control-lg rounded-3 bg-light border-0" %>
      </div>

      <%= f.submit "Salvar Alterações", class: "btn btn-mobile-primary w-100" %>
    <% end %>
  </div>
</div>
