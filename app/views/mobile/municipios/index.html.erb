<div class="d-flex justify-content-between align-items-center mb-4">
  <h5 class="fw-bold mb-0">Municípios</h5>
  <%= link_to new_mobile_municipio_path, class: "btn btn-gradient shadow-sm rounded-pill px-3 fw-bold" do %>
    <i class="bi bi-plus-lg me-1"></i> Novo
  <% end %>
</div>

<% @municipios.each do |municipio| %>
  <%= link_to mobile_municipio_path(municipio), class: "text-decoration-none text-dark" do %>
    <div class="mobile-card mb-3 shadow-sm border-0">
      <div class="p-3 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <div class="icon-box bg-soft-primary rounded-circle me-3" style="width: 40px; height: 40px;">
            <i class="bi bi-building text-primary"></i>
          </div>
          <div>
            <h6 class="fw-bold mb-0"><%= municipio.name %></h6>
            <small class="text-muted"><%= municipio.regioes.count %> regiões</small>
          </div>
        </div>
        <i class="bi bi-chevron-right text-muted"></i>
      </div>
    </div>
  <% end %>
<% end %>

<% if @municipios.empty? %>
  <div class="text-center py-5 text-muted">
    <div class="icon-box bg-light rounded-circle mx-auto mb-3" style="width: 80px; height: 80px;">
      <i class="bi bi-map fs-1 opacity-50"></i>
    </div>
    <p>Nenhum município cadastrado.</p>
  </div>
<% end %>
