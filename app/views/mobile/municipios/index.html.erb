<div class="d-flex justify-content-between align-items-center mb-3">
  <h5 class="fw-bold mb-0">Municípios</h5>
  <%= link_to new_mobile_municipio_path, class: "btn btn-sm btn-primary rounded-pill px-3" do %>
    <i class="bi bi-plus-lg me-1"></i> Novo
  <% end %>
</div>

<% @municipios.each do |municipio| %>
  <%= link_to mobile_municipio_path(municipio), class: "text-decoration-none text-dark" do %>
    <div class="mobile-card mb-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h6 class="fw-bold mb-0"><%= municipio.name %></h6>
          <small class="text-muted"><%= municipio.regioes.count %> regiões</small>
        </div>
        <i class="bi bi-chevron-right text-muted"></i>
      </div>
    </div>
  <% end %>
<% end %>

<% if @municipios.empty? %>
  <div class="text-center py-5 text-muted">
    <i class="bi bi-map fs-1 mb-3 d-block opacity-50"></i>
    <p>Nenhum município cadastrado.</p>
  </div>
<% end %>
