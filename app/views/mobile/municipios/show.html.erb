<div class="mobile-card shadow-sm mb-4 border-0 overflow-hidden">
  <div class="bg-soft-primary p-4">
    <div class="d-flex align-items-center">
       <%= link_to mobile_municipios_path, class: "text-decoration-none text-dark me-3" do %>
        <div class="icon-box bg-white shadow-sm rounded-circle" style="width: 40px; height: 40px;">
           <i class="bi bi-arrow-left fs-5"></i>
        </div>
      <% end %>
      <div class="flex-grow-1 text-center pe-5">
         <div class="icon-box bg-white text-primary rounded-circle mx-auto mb-2 shadow-sm" style="width: 50px; height: 50px; font-size: 1.2rem;">
           <i class="bi bi-building"></i>
         </div>
         <h5 class="fw-bold mb-0 text-primary"><%= @municipio.name %></h5>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h6 class="fw-bold mb-0">Regiões</h6>
  <%= link_to new_mobile_municipio_regiao_path(@municipio), class: "btn btn-sm btn-gradient shadow-sm rounded-pill px-3 fw-bold" do %>
    <i class="bi bi-plus-lg me-1"></i> Nova Região
  <% end %>
</div>

<% @regioes.each do |regiao| %>
  <%= link_to mobile_municipio_regiao_path(@municipio, regiao), class: "text-decoration-none text-dark" do %>
    <div class="mobile-card mb-3 shadow-sm border-0">
      <div class="p-3 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <div class="icon-box bg-soft-success rounded-circle me-3" style="width: 40px; height: 40px;">
            <i class="bi bi-map text-success"></i>
          </div>
          <div>
            <h6 class="fw-bold mb-0"><%= regiao.name %></h6>
            <small class="text-muted"><%= regiao.bairros.count %> bairros</small>
          </div>
        </div>
        <i class="bi bi-chevron-right text-muted"></i>
      </div>
    </div>
  <% end %>
<% end %>

<% if @regioes.empty? %>
  <div class="text-center py-5 text-muted">
    <div class="icon-box bg-light rounded-circle mx-auto mb-3" style="width: 60px; height: 60px;">
      <i class="bi bi-map fs-2 opacity-50"></i>
    </div>
    <p>Nenhuma região cadastrada.</p>
  </div>
<% end %>

<div class="d-grid gap-2 mt-4">
  <%= link_to edit_mobile_municipio_path(@municipio), class: "btn btn-light shadow-sm fw-bold py-3" do %>
    <i class="bi bi-pencil me-2"></i>Editar Município
  <% end %>
  
  <%= button_to mobile_municipio_path(@municipio), method: :delete, class: "btn btn-light text-danger shadow-sm fw-bold py-3 w-100", form: { class: "w-100" }, data: { turbo_confirm: "Tem certeza?" } do %>
    <i class="bi bi-trash me-2"></i>Excluir Município
  <% end %>
</div>
