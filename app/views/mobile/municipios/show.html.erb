<div class="d-flex align-items-center mb-4">
  <%= link_to mobile_municipios_path, class: "btn btn-link text-dark p-0 me-3" do %>
    <i class="bi bi-arrow-left fs-4"></i>
  <% end %>
  <h5 class="fw-bold mb-0"><%= @municipio.name %></h5>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h6 class="fw-bold mb-0">Regiões</h6>
  <%= link_to new_mobile_municipio_regiao_path(@municipio), class: "btn btn-sm btn-outline-primary rounded-pill px-3" do %>
    <i class="bi bi-plus-lg me-1"></i> Nova Região
  <% end %>
</div>

<% @regioes.each do |regiao| %>
  <%= link_to mobile_municipio_regiao_path(@municipio, regiao), class: "text-decoration-none text-dark" do %>
    <div class="mobile-card mb-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h6 class="fw-bold mb-0"><%= regiao.name %></h6>
          <small class="text-muted"><%= regiao.bairros.count %> bairros</small>
        </div>
        <i class="bi bi-chevron-right text-muted"></i>
      </div>
    </div>
  <% end %>
<% end %>

<% if @regioes.empty? %>
  <div class="text-center py-5 text-muted">
    <p>Nenhuma região cadastrada.</p>
  </div>
<% end %>

<div class="d-grid gap-2 mt-4">
  <%= link_to edit_mobile_municipio_path(@municipio), class: "btn btn-outline-secondary" do %>
    <i class="bi bi-pencil me-2"></i>Editar Município
  <% end %>
  
  <%= button_to mobile_municipio_path(@municipio), method: :delete, class: "btn btn-outline-danger w-100", form: { class: "w-100" }, data: { turbo_confirm: "Tem certeza?" } do %>
    <i class="bi bi-trash me-2"></i>Excluir Município
  <% end %>
</div>
