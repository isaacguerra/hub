<div class="mobile-card shadow-sm mb-4 border-0 overflow-hidden">
  <div class="bg-soft-success p-4">
    <div class="d-flex align-items-center">
       <%= link_to mobile_municipio_path(@municipio), class: "text-decoration-none text-dark me-3" do %>
        <div class="icon-box bg-white shadow-sm rounded-circle" style="width: 40px; height: 40px;">
           <i class="bi bi-arrow-left fs-5"></i>
        </div>
      <% end %>
      <div class="flex-grow-1 text-center pe-5">
         <div class="icon-box bg-white text-success rounded-circle mx-auto mb-2 shadow-sm" style="width: 50px; height: 50px; font-size: 1.2rem;">
           <i class="bi bi-map"></i>
         </div>
         <h5 class="fw-bold mb-0 text-success"><%= @regiao.name %></h5>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h6 class="fw-bold mb-0">Bairros</h6>
  <%= link_to new_mobile_municipio_regiao_bairro_path(@municipio, @regiao), class: "btn btn-sm btn-gradient shadow-sm rounded-pill px-3 fw-bold" do %>
    <i class="bi bi-plus-lg me-1"></i> Novo Bairro
  <% end %>
</div>

<% @bairros.each do |bairro| %>
  <div class="mobile-card mb-3 shadow-sm border-0">
    <div class="p-3 d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <div class="icon-box bg-soft-warning rounded-circle me-3" style="width: 40px; height: 40px;">
          <i class="bi bi-houses text-warning"></i>
        </div>
        <h6 class="fw-bold mb-0"><%= bairro.name %></h6>
      </div>
      
      <div class="dropdown">
        <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
          <i class="bi bi-three-dots-vertical"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
          <li><%= link_to edit_mobile_municipio_regiao_bairro_path(@municipio, @regiao, bairro), class: "dropdown-item" do %>
            <i class="bi bi-pencil me-2"></i>Editar
          <% end %></li>
          <li><%= button_to mobile_municipio_regiao_bairro_path(@municipio, @regiao, bairro), method: :delete, class: "dropdown-item text-danger", form: { style: "display:inline" } do %>
            <i class="bi bi-trash me-2"></i>Excluir
          <% end %></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<% if @bairros.empty? %>
  <div class="text-center py-5 text-muted">
    <div class="icon-box bg-light rounded-circle mx-auto mb-3" style="width: 60px; height: 60px;">
      <i class="bi bi-houses fs-2 opacity-50"></i>
    </div>
    <p>Nenhum bairro cadastrado.</p>
  </div>
<% end %>

<div class="d-grid gap-2 mt-4">
  <%= link_to edit_mobile_municipio_regiao_path(@municipio, @regiao), class: "btn btn-light shadow-sm fw-bold py-3" do %>
    <i class="bi bi-pencil me-2"></i>Editar Região
  <% end %>
  
  <%= button_to mobile_municipio_regiao_path(@municipio, @regiao), method: :delete, class: "btn btn-light text-danger shadow-sm fw-bold py-3 w-100", form: { class: "w-100" }, data: { turbo_confirm: "Tem certeza?" } do %>
    <i class="bi bi-trash me-2"></i>Excluir Região
  <% end %>
</div>
