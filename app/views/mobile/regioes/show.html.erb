<div class="d-flex align-items-center mb-4">
  <%= link_to mobile_municipio_path(@municipio), class: "btn btn-link text-dark p-0 me-3" do %>
    <i class="bi bi-arrow-left fs-4"></i>
  <% end %>
  <h5 class="fw-bold mb-0"><%= @regiao.name %></h5>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h6 class="fw-bold mb-0">Bairros</h6>
  <%= link_to new_mobile_municipio_regiao_bairro_path(@municipio, @regiao), class: "btn btn-sm btn-outline-primary rounded-pill px-3" do %>
    <i class="bi bi-plus-lg me-1"></i> Novo Bairro
  <% end %>
</div>

<% @bairros.each do |bairro| %>
  <div class="mobile-card mb-3">
    <div class="card-body d-flex justify-content-between align-items-center">
      <h6 class="fw-bold mb-0"><%= bairro.name %></h6>
      
      <div class="dropdown">
        <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
          <i class="bi bi-three-dots-vertical"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
          <li><%= link_to edit_mobile_municipio_regiao_bairro_path(@municipio, @regiao, bairro), class: "dropdown-item" do %>
            <i class="bi bi-pencil me-2"></i>Editar
          <% end %></li>
          <li><%= button_to mobile_municipio_regiao_bairro_path(@municipio, @regiao, bairro), method: :delete, class: "dropdown-item text-danger", form: { style: "display:inline" } do %>
            <i class="bi bi-trash me-2"></i>Excluir
          <% end %></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<% if @bairros.empty? %>
  <div class="text-center py-5 text-muted">
    <p>Nenhum bairro cadastrado.</p>
  </div>
<% end %>

<div class="d-grid gap-2 mt-4">
  <%= link_to edit_mobile_municipio_regiao_path(@municipio, @regiao), class: "btn btn-outline-secondary" do %>
    <i class="bi bi-pencil me-2"></i>Editar Região
  <% end %>
  
  <%= button_to mobile_municipio_regiao_path(@municipio, @regiao), method: :delete, class: "btn btn-outline-danger w-100", form: { class: "w-100" }, data: { turbo_confirm: "Tem certeza?" } do %>
    <i class="bi bi-trash me-2"></i>Excluir Região
  <% end %>
</div>
