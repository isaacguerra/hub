<div class="d-flex align-items-center mb-4">
  <%= link_to mobile_municipio_regiao_path(@municipio, @regiao), class: "btn btn-link text-dark p-0 me-3" do %>
    <i class="bi bi-arrow-left fs-4"></i>
  <% end %>
  <h5 class="fw-bold mb-0">Editar Região</h5>
</div>

<div class="mobile-card">
  <div class="card-body">
    <%= form_with(model: [:mobile, @municipio, @regiao], local: true) do |f| %>
      <% if @regiao.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0 small">
            <% @regiao.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :name, "Nome da Região", class: "form-label fw-bold" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Atualizar", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
