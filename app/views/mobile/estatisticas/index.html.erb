<div class="d-flex justify-content-between align-items-center mb-3">
  <h5 class="fw-bold mb-0">Estatísticas</h5>
</div>

<div class="row g-3">
  <div class="col-6">
    <div class="mobile-card h-100">
      <div class="p-3 text-center">
        <div class="icon-box bg-soft-primary rounded-circle mx-auto mb-2" style="width: 40px; height: 40px;">
          <i class="bi bi-people-fill text-primary"></i>
        </div>
        <h6 class="text-muted small mb-1">Total Apoiadores</h6>
        <p class="h2 fw-bold text-primary mb-0"><%= @total_apoiadores %></p>
      </div>
    </div>
  </div>
  
  <div class="col-6">
    <div class="mobile-card h-100">
      <div class="p-3 text-center">
        <div class="icon-box bg-soft-success rounded-circle mx-auto mb-2" style="width: 40px; height: 40px;">
          <i class="bi bi-calendar-event-fill text-success"></i>
        </div>
        <h6 class="text-muted small mb-1">Eventos</h6>
        <p class="h2 fw-bold text-success mb-0"><%= @total_eventos %></p>
      </div>
    </div>
  </div>

  <div class="col-6">
    <div class="mobile-card h-100">
      <div class="p-3 text-center">
        <div class="icon-box bg-soft-warning rounded-circle mx-auto mb-2" style="width: 40px; height: 40px;">
          <i class="bi bi-geo-alt-fill text-warning"></i>
        </div>
        <h6 class="text-muted small mb-1">Visitas</h6>
        <p class="h2 fw-bold text-warning mb-0"><%= @total_visitas %></p>
      </div>
    </div>
  </div>

  <div class="col-6">
    <div class="mobile-card h-100">
      <div class="p-3 text-center">
        <div class="icon-box bg-soft-info rounded-circle mx-auto mb-2" style="width: 40px; height: 40px;">
          <i class="bi bi-envelope-paper-fill text-info"></i>
        </div>
        <h6 class="text-muted small mb-1">Convites</h6>
        <p class="h2 fw-bold text-info mb-0"><%= @total_convites %></p>
      </div>
    </div>
  </div>
</div>

<div class="mobile-card mt-3">
  <div class="p-3">
    <div class="d-flex align-items-center mb-3">
      <div class="icon-box bg-soft-primary rounded-circle me-3" style="width: 40px; height: 40px;">
        <i class="bi bi-bar-chart-fill text-primary"></i>
      </div>
      <h6 class="fw-bold mb-0">Desempenho Geral</h6>
    </div>
    <div class="progress mb-3" style="height: 20px;">
      <div class="progress-bar bg-primary" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">Metas</div>
    </div>
    <p class="small text-muted mb-0">Você atingiu 70% da meta de cadastros deste mês.</p>
  </div>
</div>
