<div class="d-flex align-items-center mb-4">
  <%= link_to mobile_comunicados_path, class: "btn btn-link text-dark p-0 me-3" do %>
    <i class="bi bi-arrow-left fs-4"></i>
  <% end %>
  <h5 class="fw-bold mb-0">Detalhes do Comunicado</h5>
</div>

<!-- Detalhes do Comunicado -->
<div class="mobile-card mb-3">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start mb-3">
      <h5 class="fw-bold mb-0 text-primary"><%= @comunicado.titulo %></h5>
      <span class="badge bg-light text-dark border"><%= @comunicado.data.strftime("%d/%m/%Y") %></span>
    </div>

    <div class="bg-light p-3 rounded-3 mb-3">
      <p class="mb-0 text-muted" style="white-space: pre-wrap;"><%= @comunicado.mensagem %></p>
    </div>

    <div class="d-flex align-items-center pt-2 border-top">
      <div class="avatar-circle bg-secondary text-white me-2" style="width: 30px; height: 30px; font-size: 0.8rem;">
        <% if @comunicado.lider.foto_perfil_url.present? %>
          <img src="<%= @comunicado.lider.foto_perfil_url %>" alt="<%= @comunicado.lider.nome %>" class="w-100 h-100 rounded-circle" style="object-fit: cover;">
        <% else %>
          <%= @comunicado.lider.nome.first.upcase %>
        <% end %>
      </div>
      <div>
        <small class="text-muted d-block" style="font-size: 0.7rem;">Enviado por</small>
        <span class="fw-bold small"><%= @comunicado.lider.nome %></span>
      </div>
    </div>
  </div>
</div>

<!-- Lista de Engajamento -->
<div class="d-flex justify-content-between align-items-center mb-3 mt-4">
  <h6 class="fw-bold mb-0">Leituras Confirmadas</h6>
  <span class="badge bg-success rounded-pill"><%= @engajados.count %></span>
</div>

<% if @engajados.any? %>
  <% @engajados.each do |apoiador| %>
    <%= link_to mobile_apoiador_path(apoiador), class: "text-decoration-none text-dark" do %>
      <div class="mobile-card mb-2">
        <div class="card-body py-3">
          <div class="d-flex align-items-center">
            <div class="avatar-circle bg-success text-white me-3" style="width: 45px; height: 45px; font-size: 1.1rem;">
              <% if apoiador.foto_perfil_url.present? %>
                <img src="<%= apoiador.foto_perfil_url %>" alt="<%= apoiador.nome %>" class="w-100 h-100 rounded-circle" style="object-fit: cover;">
              <% else %>
                <%= apoiador.nome.first.upcase %>
              <% end %>
            </div>
            <div class="flex-grow-1">
              <h6 class="fw-bold mb-0"><%= apoiador.nome %></h6>
              <div class="small text-muted">
                <i class="bi bi-geo-alt me-1" style="font-size: 0.7rem;"></i>
                <%= apoiador.municipio.nome %> - <%= apoiador.bairro.nome %>
              </div>
            </div>
            <i class="bi bi-check-circle-fill text-success fs-5"></i>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div class="text-center py-5 text-muted">
    <i class="bi bi-check2-all fs-1 mb-3 d-block opacity-50"></i>
    <p>Nenhuma confirmação de leitura ainda.</p>
  </div>
<% end %>

<!-- Ações (se for o criador) -->
<% if Current.apoiador.e_autorizado?(:gerenciar_comunicado, @comunicado) %>
  <div class="d-grid gap-2 mt-4 mb-4">
    <%= link_to edit_mobile_comunicado_path(@comunicado), class: "btn btn-outline-primary" do %>
      <i class="bi bi-pencil me-2"></i>Editar Comunicado
    <% end %>
  </div>
<% end %>
