<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
              <li class="breadcrumb-item"><%= link_to "MunicÃ­pios", municipios_path %></li>
              <li class="breadcrumb-item"><%= link_to @municipio.nome, municipio_regioes_path(@municipio) %></li>
              <li class="breadcrumb-item"><%= link_to @regiao.nome, municipio_regiao_bairros_path(@municipio, @regiao) %></li>
              <li class="breadcrumb-item active" aria-current="page">Detalhes</li>
            </ol>
          </nav>
          <h1 class="h2 mb-0 text-gray-800">Detalhes do Bairro</h1>
        </div>
        <%= link_to municipio_regiao_bairros_path(@municipio, @regiao), class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left"></i> Voltar
        <% end %>
      </div>

      <div class="card card-custom mb-4">
        <div class="card-body text-center py-5">
          <div class="mb-4">
            <div class="d-inline-flex align-items-center justify-content-center bg-secondary bg-opacity-10 text-secondary rounded-circle" style="width: 80px; height: 80px;">
              <i class="bi bi-houses display-4"></i>
            </div>
          </div>
          
          <h2 class="card-title mb-1"><%= @bairro.nome %></h2>
          <p class="text-muted">Bairro em <%= @regiao.nome %>, <%= @municipio.nome %></p>

          <div class="d-flex justify-content-center gap-2 mt-4">
            <%= link_to edit_municipio_regiao_bairro_path(@municipio, @regiao, @bairro), class: "btn btn-primary" do %>
              <i class="bi bi-pencil me-2"></i>Editar
            <% end %>
            <%= button_to municipio_regiao_bairro_path(@municipio, @regiao, @bairro), method: :delete, class: "btn btn-danger", form: { class: "d-inline" }, data: { turbo_confirm: "Tem certeza que deseja excluir este bairro?" } do %>
              <i class="bi bi-trash me-2"></i>Excluir
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
