<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
              <li class="breadcrumb-item"><%= link_to "Municípios", municipios_path %></li>
              <li class="breadcrumb-item"><%= link_to @municipio.nome, municipio_regioes_path(@municipio) %></li>
              <li class="breadcrumb-item active" aria-current="page">Detalhes</li>
            </ol>
          </nav>
          <h1 class="h2 mb-0 text-gray-800">Detalhes da Região</h1>
        </div>
        <%= link_to municipio_regioes_path(@municipio), class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left"></i> Voltar
        <% end %>
      </div>

      <div class="card card-custom mb-4">
        <div class="card-body text-center py-5">
          <div class="mb-4">
            <div class="d-inline-flex align-items-center justify-content-center bg-info bg-opacity-10 text-info rounded-circle" style="width: 80px; height: 80px;">
              <i class="bi bi-map display-4"></i>
            </div>
          </div>
          
          <h2 class="card-title mb-1"><%= @regiao.nome %></h2>
          <p class="text-muted">Região de <%= @municipio.nome %></p>

          <% if @regiao.coordenador %>
            <div class="mt-4 p-3 bg-light rounded d-inline-block text-start">
              <small class="text-muted d-block mb-2 text-center">Coordenador</small>
              <div class="d-flex align-items-center">
                <div class="avatar-circle bg-primary text-white me-3">
                  <%= @regiao.coordenador.name.first.upcase %>
                </div>
                <div>
                  <h5 class="mb-0"><%= @regiao.coordenador.name %></h5>
                  <small class="text-muted"><%= @regiao.coordenador.whatsapp %></small>
                </div>
              </div>
            </div>
          <% end %>

          <div class="d-flex justify-content-center gap-2 mt-4">
            <%= link_to municipio_regiao_bairros_path(@municipio, @regiao), class: "btn btn-info text-white" do %>
              <i class="bi bi-houses me-2"></i>Gerenciar Bairros
            <% end %>
            <%= link_to edit_municipio_regiao_path(@municipio, @regiao), class: "btn btn-primary" do %>
              <i class="bi bi-pencil me-2"></i>Editar
            <% end %>
            <%= button_to municipio_regiao_path(@municipio, @regiao), method: :delete, class: "btn btn-danger", form: { class: "d-inline" }, data: { turbo_confirm: "Tem certeza que deseja excluir esta região?" } do %>
              <i class="bi bi-trash me-2"></i>Excluir
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
