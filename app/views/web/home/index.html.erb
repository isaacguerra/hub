<div class="d-flex justify-content-between align-items-center mb-4">
  <div class="section-title mb-0">
    <i class="bi bi-speedometer2 text-primary fs-4"></i>
    <div>
      <h1 class="h3 fw-bold text-dark mb-0">Dashboard</h1>
      <small class="text-muted fw-normal">Vis√£o geral da campanha e apoiadores</small>
    </div>
  </div>
</div>

<!-- Filtros -->
<%= render "filtros" %>

<!-- Grid de Apoiadores -->
<% if @apoiadores.any? %>
  <div class="row g-4">
    <% @apoiadores.each do |apoiador| %>
      <%= render "apoiador_card", apoiador: apoiador %>
    <% end %>
  </div>
<% else %>
  <div class="vibrant-card text-center">
    <div class="card-body py-5">
      <div class="mb-3">
        <div class="icon-box bg-soft-secondary rounded-circle mx-auto" style="width: 80px; height: 80px; font-size: 2.5rem;">
          <i class="bi bi-search text-muted opacity-50"></i>
        </div>
      </div>
      <h4 class="text-muted fw-bold">Nenhum apoiador encontrado</h4>
      <p class="text-muted mb-4">Tente ajustar os filtros ou cadastre um novo apoiador.</p>
      <%= link_to "Limpar Filtros", root_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
<% end %>
