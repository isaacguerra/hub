<% content_for :title, @convite.nome %>

<div class="row justify-content-center">
  <div class="col-lg-6">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3 text-primary-custom mb-0"><i class="bi bi-envelope-open me-2"></i>Detalhes do Convite</h1>
      <div>
        <%= link_to edit_convite_path(@convite), class: "btn btn-outline-primary btn-sm me-2" do %>
          <i class="bi bi-pencil me-1"></i> Editar
        <% end %>
        <%= link_to convites_path, class: "btn btn-outline-secondary btn-sm" do %>
          <i class="bi bi-arrow-left me-1"></i> Voltar
        <% end %>
      </div>
    </div>

    <div class="card card-custom mb-4">
      <div class="card-body text-center p-5">
        <div class="mb-4">
          <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto mb-3 border" style="width: 80px; height: 80px;">
            <i class="bi bi-person-plus text-secondary fs-1"></i>
          </div>
          <h2 class="h4 fw-bold mb-1"><%= @convite.nome %></h2>
          <p class="text-muted mb-3"><%= @convite.whatsapp %></p>
          
          <% case @convite.status %>
          <% when 'pendente' %>
            <span class="badge bg-warning text-dark border px-3 py-2 rounded-pill">Pendente</span>
          <% when 'aceito' %>
            <span class="badge bg-success border px-3 py-2 rounded-pill">Aceito</span>
          <% when 'recusado' %>
            <span class="badge bg-danger border px-3 py-2 rounded-pill">Recusado</span>
          <% else %>
            <span class="badge bg-secondary border px-3 py-2 rounded-pill"><%= @convite.status.humanize %></span>
          <% end %>
        </div>

        <hr class="my-4">

        <div class="text-start">
          <h6 class="text-uppercase text-muted small fw-bold mb-3">Informações de Envio</h6>
          <div class="d-flex align-items-center">
            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3 border" style="width: 40px; height: 40px;">
              <i class="bi bi-send text-secondary"></i>
            </div>
            <div>
              <div class="fw-bold"><%= @convite.enviado_por&.nome || "Sistema" %></div>
              <div class="text-muted small">Enviado em <%= @convite.created_at.strftime("%d/%m/%Y às %H:%M") %></div>
            </div>
          </div>
        </div>

        <div class="d-grid gap-2 mt-4">
          <a href="https://wa.me/55<%= @convite.whatsapp.gsub(/\D/, '') %>" target="_blank" class="btn btn-success">
            <i class="bi bi-whatsapp me-2"></i>Enviar Mensagem
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
