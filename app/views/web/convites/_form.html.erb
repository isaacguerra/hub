<%= form_with(model: convite, class: "needs-validation") do |form| %>
  <% if convite.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>Erros encontrados:</h4>
      <ul class="mb-0">
        <% convite.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="card card-custom mb-4">
    <div class="card-header bg-light">
      <h5 class="mb-0 text-primary-custom"><i class="bi bi-envelope-paper me-2"></i>Dados do Convite</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <%= form.label :nome, "Nome do Convidado", class: "form-label fw-bold" %>
          <%= form.text_field :nome, class: "form-control", placeholder: "Nome completo" %>
        </div>

        <div class="col-md-6">
          <%= form.label :whatsapp, "WhatsApp", class: "form-label fw-bold" %>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-whatsapp"></i></span>
            <%= form.text_field :whatsapp, class: "form-control", placeholder: "(96) 99999-9999" %>
          </div>
          <div class="form-text">Somente n√∫meros com DDD.</div>
        </div>

        <div class="col-md-6">
          <%= form.label :status, "Status", class: "form-label fw-bold" %>
          <%= form.select :status, ['pendente', 'aceito', 'recusado'], {}, { class: "form-select" } %>
        </div>

        <div class="col-md-6">
          <%= form.label :enviado_por_id, "Enviado Por", class: "form-label fw-bold" %>
          <%= form.collection_select :enviado_por_id, Apoiador.order(:nome), :id, :nome, { prompt: "Selecione quem enviou" }, { class: "form-select" } %>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "Cancelar", convites_path, class: "btn btn-outline-secondary" %>
    <%= form.submit "Salvar Convite", class: "btn btn-primary-custom" %>
  </div>
<% end %>
