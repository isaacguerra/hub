<% content_for :title, "Editar Convite" %>

<div class="row justify-content-center">
  <div class="col-lg-6">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3 text-primary-custom mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Convite</h1>
      <div>
        <%= link_to @convite, class: "btn btn-outline-info btn-sm me-2" do %>
          <i class="bi bi-eye me-1"></i> Ver
        <% end %>
        <%= link_to convites_path, class: "btn btn-outline-secondary btn-sm" do %>
          <i class="bi bi-arrow-left me-1"></i> Voltar
        <% end %>
      </div>
    </div>

    <%= render "form", convite: @convite %>
  </div>
</div>
