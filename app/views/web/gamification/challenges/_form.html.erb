<%= form_with(model: challenge, local: true, class: "card p-4 mb-4 shadow-sm") do |f| %>
  <% if challenge.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading h6 fw-bold">Erros encontrados:</h4>
      <ul class="mb-0 ps-3">
        <% challenge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, "Título", class: "form-label fw-bold" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Descrição", class: "form-label fw-bold" %>
    <%= f.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :reward, "Prêmio", class: "form-label fw-bold" %>
    <%= f.text_field :reward, class: "form-control", placeholder: "Ex: 500 XP, Badge Exclusivo, etc." %>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :starts_at, "Data de Início", class: "form-label fw-bold" %>
      <%= f.datetime_field :starts_at, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :ends_at, "Data de Término", class: "form-label fw-bold" %>
      <%= f.datetime_field :ends_at, class: "form-control" %>
    </div>
  </div>

  <div class="mb-4">
    <label class="form-label fw-bold">Regras da Missão</label>
    <div class="form-text mb-3">Defina a quantidade necessária para cada ação completar a missão. Deixe em branco ou 0 para ignorar a ação.</div>
    
    <div class="card bg-light border-0">
      <div class="card-body">
        <div class="row g-3">
          <% ::Gamification::ActionWeight.order(:action_type).each do |weight| %>
            <div class="col-md-6">
              <div class="form-group">
                <label class="form-label small text-muted text-uppercase fw-bold mb-1">
                  <%= weight.description %>
                </label>
                <div class="input-group">
                  <input type="number" 
                         name="gamification_challenge[rules][<%= weight.action_type %>]" 
                         value="<%= challenge.rules&.dig(weight.action_type) %>"
                         class="form-control" 
                         min="0"
                         placeholder="Qtd">
                  <span class="input-group-text text-muted">un</span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <%= f.submit "Salvar Missão", class: "btn btn-primary" %>
    <%= link_to "Cancelar", gamification_challenges_path, class: "btn btn-link text-decoration-none" %>
  </div>
<% end %>
