<div class="container mt-4">
  <h1 class="h3 text-gray-800 mb-4">Gerenciar Medalhas</h1>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @badges.each do |badge| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <div class="d-flex align-items-center mb-3">
              <% if badge.image_url.present? %>
                <%= image_tag badge.image_url, class: "rounded-circle me-3 object-fit-cover bg-light", style: "width: 48px; height: 48px;" %>
              <% else %>
                <div class="rounded-circle me-3 bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center text-secondary" style: "width: 48px; height: 48px;">
                  <i class="bi bi-award fs-4"></i>
                </div>
              <% end %>
              <div>
                <h5 class="card-title mb-0 text-dark fw-bold"><%= badge.name %></h5>
                <small class="text-muted font-monospace"><%= badge.key %></small>
              </div>
            </div>
            <p class="card-text text-muted small mb-3 flex-grow-1"><%= badge.description %></p>
            
            <div class="bg-light p-2 rounded small text-dark font-monospace border">
              <strong>Crit√©rios:</strong> <%= badge.criteria %>
            </div>
          </div>
          <div class="card-footer bg-light border-top-0">
            <%= link_to "Editar", edit_gamification_badge_path(badge), class: "btn btn-sm btn-outline-primary w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
