<% content_for :title, "Apoiadores" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div class="section-title mb-0">
    <i class="bi bi-people-fill text-primary fs-5"></i>
    <span class="h4 mb-0 text-dark fw-bold">Rede de Apoiadores</span>
  </div>
  <%= link_to new_apoiador_path, class: "btn btn-vibrant shadow-sm" do %>
    <i class="bi bi-plus-lg me-2"></i>Novo Apoiador
  <% end %>
</div>

<div class="vibrant-card">
  <div class="card-body p-0">
    <div class="table-responsive p-3">
      <table class="table table-vibrant align-middle mb-0">
        <thead>
          <tr>
            <th class="ps-4">Nome</th>
            <th>Função</th>
            <th>WhatsApp</th>
            <th>Município</th>
            <th class="text-end pe-4">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @apoiadores.each do |apoiador| %>
            <tr>
              <td class="ps-4">
                <div class="d-flex align-items-center">
                  <div class="avatar-wrapper me-3">
                    <% if Utils::BuscaImagemWhatsapp.buscar(apoiador.whatsapp) %>
                      <img src="<%= Utils::BuscaImagemWhatsapp.buscar(apoiador.whatsapp) %>" class="avatar-img" width="40" height="40">
                    <% else %>
                      <div class="avatar-img bg-soft-primary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="bi bi-person-fill text-primary"></i>
                      </div>
                    <% end %>
                  </div>
                  <div>
                    <div class="fw-bold text-dark"><%= apoiador.nome %></div>
                    <small class="text-muted"><%= apoiador.email %></small>
                  </div>
                </div>
              </td>
              <td>
                <span class="badge rounded-pill bg-soft-info text-dark border-0 px-3 py-2">
                  <%= apoiador.funcao&.nome %>
                </span>
              </td>
              <td>
                <span class="text-muted font-monospace small"><i class="bi bi-whatsapp text-success me-1"></i><%= apoiador.whatsapp %></span>
              </td>
              <td>
                <% if apoiador.municipio %>
                  <div class="d-flex align-items-center text-muted small">
                    <i class="bi bi-geo-alt-fill text-danger me-1 opacity-50"></i>
                    <%= apoiador.municipio.nome %>
                  </div>
                <% else %>
                  <span class="text-muted">-</span>
                <% end %>
              </td>
              <td class="text-end pe-4">
                <div class="dropdown">
                  <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-three-dots-vertical"></i>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4">
                    <li><%= link_to "Ver Detalhes", apoiador_path(apoiador), class: "dropdown-item" %></li>
                    <li><%= link_to "Editar", edit_apoiador_path(apoiador), class: "dropdown-item" %></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><%= button_to "Excluir", apoiador_path(apoiador), method: :delete, class: "dropdown-item text-danger", form: { data: { turbo_confirm: "Tem certeza?" } } %></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

