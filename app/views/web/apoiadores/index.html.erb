<% content_for :title, "Apoiadores" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 text-primary-custom fw-bold"><i class="bi bi-people-fill me-2"></i>Rede de Apoiadores</h1>
</div>

<div class="card card-custom border-0 shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="bg-light text-secondary">
          <tr>
            <th class="ps-4 py-3">Nome</th>
            <th class="py-3">Função</th>
            <th class="py-3">WhatsApp</th>
            <th class="py-3">Município</th>
            <th class="text-end pe-4 py-3">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @apoiadores.each do |apoiador| %>
            <tr>
              <td class="ps-4 py-3">
                <div class="d-flex align-items-center">
                  <% if Utils::BuscaImagemWhatsapp.buscar(apoiador.whatsapp) %>
                    <img src="<%= Utils::BuscaImagemWhatsapp.buscar(apoiador.whatsapp) %>" class="rounded-circle me-3 border" width="40" height="40" style="object-fit: cover;">
                  <% else %>
                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3 border" style="width: 40px; height: 40px;">
                      <i class="bi bi-person-fill text-secondary fs-5"></i>
                    </div>
                  <% end %>
                  <div>
                    <div class="fw-bold text-dark"><%= apoiador.nome %></div>
                    <small class="text-muted"><%= apoiador.email %></small>
                  </div>
                </div>
              </td>
              <td>
                <span class="badge rounded-pill bg-light text-dark border">
                  <%= apoiador.funcao&.nome %>
                </span>
              </td>
              <td>
                <span class="text-muted font-monospace"><%= apoiador.whatsapp %></span>
              </td>
              <td>
                <% if apoiador.municipio %>
                  <div class="d-flex align-items-center text-muted">
                    <i class="bi bi-geo-alt me-1 small"></i>
                    <%= apoiador.municipio.nome %>
                  </div>
                <% else %>
                  <span class="text-muted">-</span>
                <% end %>
              </td>
              <td class="text-end pe-4">
                <div class="btn-group">
                  <%= link_to apoiador, class: "btn btn-sm btn-light text-secondary border", title: "Ver Perfil" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= link_to edit_apoiador_path(apoiador), class: "btn btn-sm btn-light text-primary border", title: "Editar" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

