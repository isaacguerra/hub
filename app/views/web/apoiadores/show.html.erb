<% content_for :title, @apoiador.nome %>

<div class="row">
  <!-- Sidebar do Perfil -->
  <div class="col-md-4 mb-4">
    <div class="card card-custom">
      <div class="card-body text-center">
        <% if Utils::BuscaImagemWhatsapp.buscar(@apoiador.whatsapp) %>
          <img src="<%= Utils::BuscaImagemWhatsapp.buscar(@apoiador.whatsapp) %>" class="rounded-circle mb-3 border border-4 border-light shadow-sm" width="120" height="120">
        <% else %>
          <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto mb-3 shadow-sm" style="width: 120px; height: 120px;">
            <i class="bi bi-person text-muted fs-1"></i>
          </div>
        <% end %>
        
        <h3 class="fw-bold mb-1"><%= @apoiador.nome %></h3>
        <span class="badge bg-primary mb-3"><%= @apoiador.funcao&.nome %></span>
        
        <div class="d-grid gap-2">
          <a href="https://wa.me/<%= @apoiador.whatsapp %>" target="_blank" class="btn btn-success">
            <i class="bi bi-whatsapp me-2"></i>Conversar
          </a>
          <%= link_to edit_apoiador_path(@apoiador), class: "btn btn-outline-primary" do %>
            <i class="bi bi-pencil me-2"></i>Editar Perfil
          <% end %>
          
          <% if Current.apoiador.candidato? || Current.apoiador.coordenador_geral? %>
            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#changeRoleModal">
              <i class="bi bi-person-badge me-2"></i>Alterar Função
            </button>
          <% end %>
        </div>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center px-4">
          <span class="text-muted"><i class="bi bi-telephone me-2"></i>WhatsApp</span>
          <span class="fw-bold"><%= @apoiador.whatsapp %></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center px-4">
          <span class="text-muted"><i class="bi bi-envelope me-2"></i>Email</span>
          <span class="fw-bold"><%= @apoiador.email.presence || "-" %></span>
        </li>
        <li class="list-group-item px-4">
          <div class="text-muted mb-1"><i class="bi bi-geo-alt me-2"></i>Localização</div>
          <div class="fw-bold small">
            <%= @apoiador.bairro&.nome %><br>
            <%= @apoiador.regiao&.nome %> - <%= @apoiador.municipio&.nome %>
          </div>
        </li>
      </ul>
    </div>
  </div>

  <!-- Conteúdo Principal -->
  <div class="col-md-8">
    <div class="card card-custom">
      <div class="card-header bg-white border-bottom-0 pt-4 px-4">
        <ul class="nav nav-tabs card-header-tabs" id="profileTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="rede-tab" data-bs-toggle="tab" data-bs-target="#rede" type="button" role="tab">Rede de Apoio</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="atividades-tab" data-bs-toggle="tab" data-bs-target="#atividades" type="button" role="tab">Atividades</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="convites-tab" data-bs-toggle="tab" data-bs-target="#convites" type="button" role="tab">Convites</button>
          </li>
        </ul>
      </div>
      <div class="card-body p-4">
        <div class="tab-content" id="profileTabsContent">
          
          <!-- Aba Rede -->
          <div class="tab-pane fade show active" id="rede" role="tabpanel">
            <h5 class="mb-3">Liderança</h5>
            <% if @apoiador.lider %>
              <div class="d-flex align-items-center p-3 border rounded mb-4 bg-light">
                <div class="me-3">
                  <i class="bi bi-person-badge fs-3 text-primary"></i>
                </div>
                <div>
                  <div class="fw-bold"><%= link_to @apoiador.lider.nome, @apoiador.lider, class: "text-decoration-none" %></div>
                  <div class="small text-muted"><%= @apoiador.lider.funcao&.nome %></div>
                </div>
              </div>
            <% else %>
              <p class="text-muted fst-italic mb-4">Este apoiador não possui um líder direto.</p>
            <% end %>

            <div class="d-flex justify-content-between align-items-center mb-3">
              <h5 class="mb-0">Liderados Diretos (<%= @apoiador.subordinados.count %>)</h5>
            </div>
            
            <% if @apoiador.subordinados.any? %>
              <div class="list-group">
                <% @apoiador.subordinados.each do |subordinado| %>
                  <%= link_to subordinado, class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                    <div>
                      <span class="fw-bold"><%= subordinado.nome %></span>
                      <small class="text-muted d-block"><%= subordinado.funcao&.nome %></small>
                    </div>
                    <i class="bi bi-chevron-right text-muted"></i>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-4 text-muted">
                <i class="bi bi-people fs-1 d-block mb-2"></i>
                Nenhum liderado encontrado.
              </div>
            <% end %>
          </div>

          <!-- Aba Atividades -->
          <div class="tab-pane fade" id="atividades" role="tabpanel">
            <h5 class="mb-3">Eventos Participados</h5>
            <% if @apoiador.eventos.any? %>
              <ul class="list-group mb-4">
                <% @apoiador.eventos.each do |evento| %>
                  <li class="list-group-item">
                    <div class="d-flex w-100 justify-content-between">
                      <h6 class="mb-1"><%= evento.titulo %></h6>
                      <small><%= evento.data.strftime("%d/%m/%Y") %></small>
                    </div>
                    <small class="text-muted"><%= evento.local %></small>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p class="text-muted">Nenhum evento registrado.</p>
            <% end %>

            <h5 class="mb-3">Visitas Recebidas</h5>
            <% if @apoiador.visitas_recebidas.any? %>
              <ul class="list-group">
                <% @apoiador.visitas_recebidas.each do |visita| %>
                  <li class="list-group-item">
                    <div class="d-flex w-100 justify-content-between">
                      <h6 class="mb-1">Visita de <%= visita.lider&.nome %></h6>
                      <small><%= visita.created_at.strftime("%d/%m/%Y") %></small>
                    </div>
                    <small class="text-muted"><%= visita.relato %></small>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p class="text-muted">Nenhuma visita registrada.</p>
            <% end %>
          </div>

          <!-- Aba Convites -->
          <div class="tab-pane fade" id="convites" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h5 class="mb-0">Convites Enviados</h5>
              <%= link_to new_convite_path(enviado_por_id: @apoiador.id), class: "btn btn-sm btn-outline-primary" do %>
                <i class="bi bi-envelope-plus"></i> Novo Convite
              <% end %>
            </div>

            <% if @apoiador.convites_enviados.any? %>
              <div class="table-responsive">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Convidado</th>
                      <th>Status</th>
                      <th>Data</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @apoiador.convites_enviados.each do |convite| %>
                      <tr>
                        <td><%= convite.nome %></td>
                        <td>
                          <span class="badge bg-<%= convite.status == 'aceito' ? 'success' : 'secondary' %>">
                            <%= convite.status %>
                          </span>
                        </td>
                        <td><%= convite.created_at.strftime("%d/%m/%Y") %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <p class="text-muted text-center py-3">Nenhum convite enviado.</p>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<% if Current.apoiador.candidato? || Current.apoiador.coordenador_geral? %>
  <!-- Modal Alterar Função -->
  <div class="modal fade" id="changeRoleModal" tabindex="-1" aria-labelledby="changeRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title fw-bold" id="changeRoleModalLabel">Alterar Função</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= form_with(model: @apoiador, local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :funcao_id, "Nova Função", class: "form-label fw-bold" %>
              <%= f.collection_select :funcao_id, Funcao.order(:name), :id, :name, {}, { class: "form-select" } %>
            </div>
            <div class="d-grid">
              <%= f.submit "Salvar Alteração", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

