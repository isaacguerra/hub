<% content_for :title, "Funções" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 text-primary-custom fw-bold"><i class="bi bi-briefcase-fill me-2"></i>Gerenciar Funções</h1>
  <%= link_to new_funcao_path, class: "btn btn-primary-custom shadow-sm" do %>
    <i class="bi bi-plus-lg me-2"></i>Nova Função
  <% end %>
</div>

<div class="card card-custom border-0 shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="bg-light text-secondary">
          <tr>
            <th class="ps-4 py-3">Nome da Função</th>
            <th class="text-end pe-4 py-3">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @funcoes.each do |funcao| %>
            <tr>
              <td class="ps-4 py-3 fw-bold text-dark"><%= funcao.nome %></td>
              <td class="text-end pe-4">
                <div class="btn-group">
                  <%= link_to funcao, class: "btn btn-sm btn-light text-secondary border", title: "Ver Detalhes" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= link_to edit_funcao_path(funcao), class: "btn btn-sm btn-light text-primary border", title: "Editar" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= button_to funcao, method: :delete, class: "btn btn-sm btn-light text-danger border", title: "Excluir", form: { style: "display:inline-block;" }, data: { turbo_confirm: "Tem certeza?" } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

