<%= form_with(model: [@municipio, regiao], class: "needs-validation") do |form| %>
  <% if regiao.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>Erros encontrados:</h4>
      <ul class="mb-0">
        <% regiao.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="card card-custom">
    <div class="card-body">
      <div class="mb-4">
        <%= form.label :nome, "Nome da Região", class: "form-label fw-bold" %>
        <div class="input-group">
          <span class="input-group-text bg-light"><i class="bi bi-map"></i></span>
          <%= form.text_field :nome, class: "form-control form-control-lg", placeholder: "Ex: Zona Norte" %>
        </div>
      </div>

      <div class="mb-4">
        <%= form.label :coordenador_id, "Coordenador", class: "form-label fw-bold" %>
        <div class="input-group">
          <span class="input-group-text bg-light"><i class="bi bi-person-badge"></i></span>
          <%= form.collection_select :coordenador_id, Apoiador.all, :id, :name, { prompt: "Selecione um coordenador (opcional)" }, { class: "form-select form-select-lg" } %>
        </div>
      </div>

      <div class="d-flex justify-content-end gap-2 pt-3 border-top">
        <%= link_to "Cancelar", municipio_regioes_path(@municipio), class: "btn btn-light" %>
        <%= form.button class: "btn btn-primary" do %>
          <i class="bi bi-check-lg me-2"></i>Salvar Região
        <% end %>
      </div>
    </div>
  </div>
<% end %>
