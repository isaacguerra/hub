<% content_for :title, "Convites" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 text-primary-custom fw-bold"><i class="bi bi-envelope-paper-fill me-2"></i>Convites</h1>
  <%= link_to new_convite_path, class: "btn btn-primary-custom shadow-sm" do %>
    <i class="bi bi-plus-lg me-2"></i>Novo Convite
  <% end %>
</div>

<div class="card card-custom border-0 shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="bg-light text-secondary">
          <tr>
            <th class="ps-4 py-3">Nome do Convidado</th>
            <th class="py-3">WhatsApp</th>
            <th class="py-3">Status</th>
            <th class="py-3">Enviado Por</th>
            <th class="text-end pe-4 py-3">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @convites.each do |convite| %>
            <tr>
              <td class="ps-4 py-3 fw-bold text-dark"><%= convite.nome %></td>
              <td>
                <span class="text-muted font-monospace"><%= convite.whatsapp %></span>
              </td>
              <td>
                <% case convite.status %>
                <% when 'pendente' %>
                  <span class="badge bg-warning text-dark border">Pendente</span>
                <% when 'aceito' %>
                  <span class="badge bg-success border">Aceito</span>
                <% when 'recusado' %>
                  <span class="badge bg-danger border">Recusado</span>
                <% else %>
                  <span class="badge bg-secondary border"><%= convite.status.humanize %></span>
                <% end %>
              </td>
              <td>
                <% if convite.enviado_por %>
                  <span class="badge bg-light text-dark border">
                    <i class="bi bi-person me-1"></i> <%= convite.enviado_por.nome %>
                  </span>
                <% else %>
                  <span class="text-muted">-</span>
                <% end %>
              </td>
              <td class="text-end pe-4">
                <div class="btn-group">
                  <%= link_to convite, class: "btn btn-sm btn-light text-secondary border", title: "Ver Detalhes" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <% if Current.apoiador.candidato? || Current.apoiador.coordenador_geral? %>
                    <%= link_to edit_convite_path(convite), class: "btn btn-sm btn-light text-primary border", title: "Editar" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= button_to convite, method: :delete, class: "btn btn-sm btn-light text-danger border", title: "Excluir", form: { style: "display:inline-block;" }, data: { turbo_confirm: "Tem certeza?" } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
